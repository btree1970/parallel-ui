{
  "name": "variant-ui",
  "version": "1.0.0",
  "description": "MCP server for rapid UI iteration - create and compare multiple UI variants side-by-side",
  "main": "dist/index.js",
  "type": "module",
  "files": [
    "dist/",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/btree1970/variant-ui.git"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepare": "husky",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["mcp", "ui", "variants", "testing", "development", "claude", "ai"],
  "author": "btree1970",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/eslint__js": "^9.14.0",
    "@types/node": "^24.3.1",
    "@types/proper-lockfile": "^4.1.4",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5",
    "proper-lockfile": "^4.1.2",
    "simple-git": "^3.28.0",
    "tree-kill": "^1.2.2",
    "zod": "^3.25.76"
  }
}
